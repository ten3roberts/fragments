{
    "run": "run-winit",
    "check": {
        "cmd": "cargo check --workspace"
    },
    "run-winit": {
        "cmd": "cargo run --example winit"
    },
    "test": {
        "cmd": "cargo nextest run"
    },
    "debug-basic": {
        "cmd": "cargo build --package basic --bin basic",
        "components": {
            "dap": {
                "program": "./target/debug/basic",
                "adapter": "rust"
            }
        }
    },
    "run basic": {
        "cmd": [
            "cargo",
            "run",
            "--package",
            "basic",
            "--bin",
            "basic",
            "--"
        ]
    }
}
